    <table class="table">
        <tr>
            <th>Id</th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Chuc Nang</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Slug)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                @*@<td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>*@
                @if (item.Status == 1)
                {
                    <a href="@Url.Action("Status", "Category", new { id = item.Id }) class="btn-sm btn-primary" )><i class="fa fa-plus"></i>Them</a>
                }
                <td>
                    <a href="@Url.Action("Edit", "Category", new { id = item.Id }) class="btn-sm btn-primary"><i class="fa fa-plus"></i></a>
                    <a href="@Url.Action("Details", "Category", new { id = item.Id }) class="btn-sm btn-info"><i class="fa fa-plus"></i></a>
                    <a href="@Url.Action("Delete", "Category", new { id = item.Id }) class="btn-sm btn-danger"><i class="fa fa-plus"></i></a>
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Id)
                </td>
            </tr>
        }

    </table>
